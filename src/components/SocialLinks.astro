---
interface Props {
	github?: string;
	twitter?: string;
	email?: string;
}

const { 
	github = 'https://github.com/gerardobaez',
	twitter = 'https://x.com/gerardobaez',
	email = 'mailto:gerardo@gerardobaez.com'
} = Astro.props;
---

<div class="flex gap-4">
	{github && (
		<a 
			href={github} 
			target="_blank" 
			rel="noopener noreferrer"
			class="link link-hover"
			aria-label="GitHub"
		>
			GitHub
		</a>
	)}
	{twitter && (
		<a 
			href={twitter} 
			target="_blank" 
			rel="noopener noreferrer"
			class="link link-hover"
			aria-label="X (Twitter)"
		>
			X
		</a>
	)}
	{email && (
		<a 
			href={email}
			class="link link-hover"
			aria-label="Email"
		>
			Email
		</a>
	)}
</div>

