---
interface Props {
	github?: string;
	twitter?: string;
	email?: string;
}

const {
	github = 'https://github.com/gerardojbaez',
	twitter = 'https://x.com/gerardojbaez',
	email = 'mailto:g@gerardobaez.com',
} = Astro.props;

type IconType = 'github' | 'twitter' | 'email';

const links = [
	github && { href: github, label: 'GitHub', icon: 'github' as IconType },
	twitter && { href: twitter, label: 'X', icon: 'twitter' as IconType },
	email && { href: email, label: 'Email', icon: 'email' as IconType },
].filter(Boolean) as { href: string; label: string; icon: IconType }[];
---

<div class="flex flex-wrap gap-3">
	{links.map(({ href, label, icon }) => (
		<a
			href={href}
			target={href.startsWith('http') ? '_blank' : undefined}
			rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}
			class="flex items-center gap-2 rounded-full border border-base-200/60 bg-base-100 px-3 py-1.5 text-sm text-base-content/80 transition-colors hover:border-base-300 hover:text-base-content"
			aria-label={label}
            title={label}
		>
			{icon === 'github' && (
				<svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true">
					<path
						fill-rule="evenodd"
						d="M12 2C6.48 2 2 6.58 2 12.17c0 4.48 2.87 8.28 6.84 9.63.5.1.68-.23.68-.5 0-.25-.01-.92-.01-1.8-2.78.62-3.37-1.37-3.37-1.37-.45-1.17-1.11-1.48-1.11-1.48-.9-.63.07-.62.07-.62 1 .07 1.52 1.06 1.52 1.06.89 1.57 2.34 1.12 2.91.86.09-.66.35-1.12.63-1.38-2.22-.26-4.56-1.14-4.56-5.1 0-1.13.39-2.05 1.03-2.77-.1-.26-.45-1.31.1-2.73 0 0 .84-.27 2.75 1.05a9.18 9.18 0 0 1 5 0c1.9-1.32 2.74-1.05 2.74-1.05.55 1.42.21 2.47.1 2.73.64.72 1.03 1.64 1.03 2.77 0 3.97-2.34 4.83-4.58 5.09.36.32.68.94.68 1.9 0 1.38-.01 2.48-.01 2.82 0 .27.18.61.69.5A10.2 10.2 0 0 0 22 12.17C22 6.58 17.52 2 12 2Z"
						clip-rule="evenodd"
					/>
				</svg>
			)}
			{icon === 'twitter' && (
				<svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true">
					<path
						fill-rule="evenodd"
						d="M4.67 3.5H9.1l3.54 5.3 3.74-5.3h3.95l-5.83 7.93 6.1 9.07H16l-4-6-4.25 6H3.67l6.35-8.61-5.35-7.39Z"
						clip-rule="evenodd"
					/>
				</svg>
			)}
			{icon === 'email' && (
				<svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true">
					<path
						fill-rule="evenodd"
						d="M4 6c-.55 0-1 .45-1 1v10c0 .56.45 1 1 1h16c.55 0 1-.44 1-1V7c0-.55-.45-1-1-1H4Zm-.13-2h16.26A2.87 2.87 0 0 1 23 6.87v10.26A2.87 2.87 0 0 1 20.13 20H3.87A2.87 2.87 0 0 1 1 17.13V6.87A2.87 2.87 0 0 1 3.87 4Z"
						clip-rule="evenodd"
					/>
					<path d="m4 8.15 7.4 4.85c.37.24.83.24 1.2 0L20 8.15" />
				</svg>
			)}
		</a>
	))}
</div>

